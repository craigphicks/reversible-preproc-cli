    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "test yarg obj",
            "program": "${workspaceFolder}/src/test-yargs-obj.mjs",
            "console": "internalConsole",
            "outputCapture": "std",
            "args":[
                "--bar", "BAR",
                "--baz", "BAZ"
            ],
            "runtimeArgs": ["--experimental-modules"]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "cli",
            "program": "${workspaceFolder}/src/reversible-preproc-cli.mjs",
            "console": "internalConsole",
            "outputCapture": "std",
            "args": [ "pp", 
                "-i", "${workspaceFolder}/test/data/test-data.js" ,
                "-o", "${workspaceFolder}/test/data/test-data.out.js", 
                "-f", "${workspaceFolder}/test/data/test-defines.json"
            ],
            "runtimeArgs": ["--experimental-modules"]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "cli defline *",
            "program": "${workspaceFolder}/src/reversible-preproc-cli.mjs",
            "console": "internalConsole",
            "outputCapture": "std",
            "args": [ "pp",
                "-i", "${workspaceFolder}/test/data/test-data.js" ,
                //"-o", "${workspaceFolder}/test/data/test-data.out.js", 
                "-l", "\"*\""
            ],
            "runtimeArgs": ["--experimental-modules"]
        },
    ]
}